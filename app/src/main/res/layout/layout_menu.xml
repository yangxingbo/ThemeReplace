<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_250_dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:clickable="true"
    android:background="?attr/drawableLayoutBg">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:background="?attr/topBarBg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/welcome"
            android:textColor="?attr/menuWelcomeTxtColor"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/ll"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:background="@drawable/menu_item_selector"
        android:drawableLeft="@mipmap/ic_drawer_home_normal"
        android:enabled="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_16_dp"
        android:singleLine="true"
        android:text="  首页"
        android:textColor="?attr/txtColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_explore"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tv_home"
        android:background="@drawable/menu_item_selector"
        android:drawableLeft="@mipmap/ic_drawer_explore_normal"
        android:enabled="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_16_dp"
        android:singleLine="true"
        android:text="  发现"
        android:textColor="?attr/txtColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tv_explore"
        android:background="@drawable/menu_item_selector"
        android:drawableLeft="@mipmap/ic_drawer_collect_normal"
        android:enabled="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_16_dp"
        android:singleLine="true"
        android:text="  收藏"
        android:textColor="?attr/txtColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tv_collect"
        android:background="@drawable/menu_item_selector"
        android:drawableLeft="@mipmap/settting"
        android:enabled="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_16_dp"
        android:singleLine="true"
        android:text="  设置"
        android:textColor="?attr/txtColor"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/gxtk_logo" />

</RelativeLayout>