<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/contextBg"
    android:orientation="vertical">

    <include layout="@layout/layout_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="?attr/contextBg"
        android:padding="@dimen/dimen_5_dp">

        <TextView
            android:id="@+id/tv_theme_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="夜间模式"
            android:textColor="?attr/txtColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_theme_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_theme_name"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:text="适合躲在被窝里看！"
            android:textColor="?attr/txtColor"
            android:textSize="14sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sc_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:trackTint="?attr/switchTrack"
            app:thumbTint="?attr/switchThumb"
            android:layout_marginRight="@dimen/dimen_10_dp" />
    </RelativeLayout>

</LinearLayout>