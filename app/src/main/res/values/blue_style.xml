<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--白天主题(蓝白色)-->
    <style name="BaseAPPThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="drawableLayoutBg">@color/contextWhite</item>
        <item name="topBarBg">@color/colorPrimary</item>
        <item name="contextBg">@color/contextWhite</item>

        <item name="txtColor">@color/txtBlackColor</item>
        <item name="menuTxtBg">@color/contextWhite</item>
        <item name="menuWelcomeTxtColor">@color/contextWhite</item>
        <item name="toolBarPop">@style/ToolBarPopupThemeLight</item>
        <item name="homeItemBg">@color/contextWhite</item>
        <item name="homeItemTxtDesc">@color/homeItemTxtDesc</item>
        <item name="switchThumb">@color/colorPrimary</item>
        <item name="switchTrack">@color/light_blue</item>
    </style>

    <style name="ToolBarPopupThemeLight" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- 设置popupMenu背景颜色-->
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <!--&lt;!&ndash;设置popupMenu弹出位置不覆盖toolbar &ndash;&gt;-->
        <item name="overlapAnchor">false</item>

        <item name="android:dropDownWidth">wrap_content</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>

    </style>
</resources>