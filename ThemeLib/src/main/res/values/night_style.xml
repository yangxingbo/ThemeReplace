<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="backgroundAndTypefaceNight" parent="Theme.AppCompat.NoActionBar">
        <item name="drawableLayoutBg">@color/contextNight</item>
        <item name="topBarBg">@color/contextNight</item>
        <item name="contextBg">@color/contextNight</item>
        <item name="txtColor">@color/txtWhiteColor</item>
        <item name="menuTxtBg">@color/contextNight</item>
        <item name="menuWelcomeTxtColor">@color/txtWhiteColor</item>
        <item name="toolBarPop">@style/ToolBarPopupThemeNight</item>
        <item name="homeItemBg">@color/menuNight</item>
        <item name="homeItemTxtDesc">@color/txtLight</item>

        <item name="android:typeface">monospace</item>

        <item name="switchThumb">@color/contextWhite</item>
        <item name="switchTrack">@color/txtLight</item>
        <item name="setTxtColor">@color/contextWhite</item>
        <item name="line">@color/txtLight</item>
    </style>

    <style name="ToolBarPopupThemeNight" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- 设置popupMenu背景颜色-->
        <item name="android:colorBackground">@color/txtBlackColor</item>
        <item name="android:windowContentTransitions">true</item>
        <!--&lt;!&ndash;设置popupMenu弹出位置不覆盖toolbar &ndash;&gt;-->
        <item name="overlapAnchor">false</item>

        <item name="android:dropDownWidth">wrap_content</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>

    </style>
</resources>